{
    "designSystem": {
      "name": "Wellness Mobile App Design System",
      "version": "1.0",
      "description": "A comprehensive design system for wellness and productivity mobile applications with a focus on friendly, approachable interfaces"
    },
    "colorPalette": {
      "primary": {
        "sage": "#8FAE8B",
        "darkSage": "#6B8A67",
        "lightSage": "#B8D4B4"
      },
      "secondary": {
        "cream": "#F5F1E8",
        "warmBeige": "#E8DCC0",
        "softYellow": "#F4D03F"
      },
      "accent": {
        "brightBlue": "#4A90E2",
        "coral": "#FF6B6B",
        "pink": "#E91E63"
      },
      "neutral": {
        "white": "#FFFFFF",
        "lightGray": "#F8F8F8",
        "mediumGray": "#E0E0E0",
        "darkGray": "#757575",
        "charcoal": "#424242"
      }
    },
    "typography": {
      "fontFamily": "System font stack (SF Pro, Roboto, system-ui)",
      "hierarchy": {
        "h1": {
          "fontSize": "28px",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "usage": "Main headers, greeting text"
        },
        "h2": {
          "fontSize": "22px",
          "fontWeight": "600",
          "lineHeight": "1.3",
          "usage": "Section headers, card titles"
        },
        "h3": {
          "fontSize": "18px",
          "fontWeight": "600",
          "lineHeight": "1.4",
          "usage": "Subsection headers"
        },
        "body": {
          "fontSize": "16px",
          "fontWeight": "400",
          "lineHeight": "1.5",
          "usage": "Main content, descriptions"
        },
        "caption": {
          "fontSize": "14px",
          "fontWeight": "400",
          "lineHeight": "1.4",
          "usage": "Labels, secondary text"
        },
        "small": {
          "fontSize": "12px",
          "fontWeight": "400",
          "lineHeight": "1.3",
          "usage": "Timestamps, metadata"
        }
      }
    },
    "spacing": {
      "scale": "8px base unit",
      "values": {
        "xs": "4px",
        "sm": "8px", 
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "xxl": "48px"
      },
      "usage": {
        "cardPadding": "16px",
        "screenMargins": "16px",
        "componentSpacing": "24px",
        "sectionSpacing": "32px"
      }
    },
    "borderRadius": {
      "values": {
        "small": "8px",
        "medium": "12px", 
        "large": "16px",
        "xlarge": "24px",
        "round": "50%"
      },
      "usage": {
        "cards": "16px",
        "buttons": "12px",
        "inputs": "8px",
        "modals": "24px",
        "avatars": "50%"
      }
    },
    "shadows": {
      "subtle": "0 2px 8px rgba(0, 0, 0, 0.08)",
      "medium": "0 4px 16px rgba(0, 0, 0, 0.12)",
      "strong": "0 8px 24px rgba(0, 0, 0, 0.16)",
      "usage": {
        "cards": "subtle",
        "modals": "medium",
        "floatingElements": "strong"
      }
    },
    "components": {
      "cards": {
        "structure": "Rounded rectangles with consistent padding",
        "variants": [
          {
            "name": "primaryCard",
            "background": "white",
            "borderRadius": "16px",
            "padding": "16px",
            "shadow": "subtle",
            "usage": "Main content containers"
          },
          {
            "name": "accentCard", 
            "background": "sage or accent colors",
            "borderRadius": "16px",
            "padding": "16px",
            "textColor": "white",
            "usage": "Highlighted content, CTAs"
          },
          {
            "name": "statsCard",
            "background": "white",
            "borderRadius": "12px",
            "padding": "12px",
            "compactLayout": true,
            "usage": "Metrics, progress indicators"
          }
        ]
      },
      "buttons": {
        "variants": [
          {
            "name": "primary",
            "background": "darkSage",
            "textColor": "white",
            "borderRadius": "12px",
            "padding": "12px 24px",
            "fontWeight": "600"
          },
          {
            "name": "secondary", 
            "background": "transparent",
            "textColor": "darkSage",
            "border": "1px solid sage",
            "borderRadius": "12px",
            "padding": "12px 24px"
          },
          {
            "name": "iconButton",
            "background": "lightGray",
            "borderRadius": "8px",
            "size": "32px x 32px",
            "usage": "Navigation, actions"
          }
        ]
      },
      "navigation": {
        "topBar": {
          "height": "56px",
          "background": "white or transparent",
          "elements": ["title", "notification icon", "menu icon"],
          "titlePosition": "center",
          "iconSize": "24px"
        },
        "tabBar": {
          "height": "60px",
          "background": "white",
          "itemSpacing": "equal distribution",
          "activeIndicator": "background color change",
          "iconSize": "24px"
        },
        "bottomActions": {
          "height": "80px",
          "background": "white",
          "borderRadius": "16px 16px 0 0",
          "buttonLayout": "horizontal row",
          "buttonSpacing": "8px"
        }
      },
      "illustrations": {
        "style": "Friendly, cartoon-like characters",
        "characteristics": [
          "Rounded, soft shapes",
          "Minimal line art style",
          "Expressive characters with simple faces",
          "Consistent color palette integration",
          "Decorative elements (stars, sparkles)",
          "Astronaut/space theme variations"
        ],
        "placement": "Integrated within cards, not standalone",
        "size": "Small to medium, supporting not dominating"
      },
      "progressIndicators": {
        "variants": [
          {
            "name": "circularProgress",
            "style": "Donut chart with percentage",
            "strokeWidth": "6px",
            "size": "60px - 120px",
            "colors": "Gradient or solid accent colors"
          },
          {
            "name": "linearProgress",
            "style": "Rounded progress bar",
            "height": "8px",
            "background": "lightGray",
            "fill": "accent colors"
          },
          {
            "name": "lineChart",
            "style": "Simple line graph",
            "strokeWidth": "3px",
            "pointSize": "6px",
            "gridLines": "minimal or none"
          }
        ]
      },
      "calendar": {
        "structure": "Grid layout with 7 columns",
        "cellSize": "40px x 40px",
        "highlighting": "Colored circles for different states",
        "monthNavigation": "Dropdown selector",
        "weekHeaders": "Single letter abbreviations"
      },
      "forms": {
        "inputs": {
          "borderRadius": "8px",
          "padding": "12px 16px",
          "border": "1px solid lightGray",
          "focusBorder": "2px solid sage",
          "background": "white"
        },
        "labels": {
          "fontSize": "14px",
          "fontWeight": "500",
          "marginBottom": "8px",
          "color": "charcoal"
        }
      }
    },
    "layoutPatterns": {
      "screenStructure": {
        "container": "Full height with safe area padding",
        "background": "Subtle gradient (sage to lighter sage)",
        "contentAreas": "Overlapping cards with varied positioning"
      },
      "cardLayout": {
        "arrangement": "Staggered, non-grid positioning",
        "overlap": "Subtle overlapping for depth",
        "sizing": "Variable widths and heights",
        "spacing": "Organic, non-uniform spacing"
      },
      "informationHierarchy": {
        "primary": "Large greeting text with illustration",
        "secondary": "Main metric or status cards",
        "tertiary": "Supporting information and actions",
        "navigation": "Consistent bottom placement"
      }
    },
    "interactions": {
      "transitions": {
        "duration": "300ms",
        "easing": "ease-out",
        "properties": ["transform", "opacity", "background-color"]
      },
      "hover": {
        "cards": "Subtle lift with shadow increase",
        "buttons": "Background color darkening",
        "icons": "Scale up to 1.1x"
      },
      "feedback": {
        "loading": "Skeleton screens or subtle animations",
        "success": "Color change and optional checkmark",
        "error": "Red accent color with shake animation"
      }
    },
    "responsive": {
      "breakpoints": {
        "mobile": "320px - 767px",
        "tablet": "768px - 1023px", 
        "desktop": "1024px+"
      },
      "adaptations": {
        "mobile": "Single column, full-width cards",
        "tablet": "Two-column grid with larger cards",
        "desktop": "Three-column grid with sidebar navigation"
      }
    },
    "accessibility": {
      "colorContrast": "WCAG AA compliant (4.5:1 minimum)",
      "focusIndicators": "2px solid outline with sage color",
      "touchTargets": "Minimum 44px x 44px",
      "textScaling": "Supports up to 200% zoom",
      "semanticMarkup": "Proper heading hierarchy and ARIA labels"
    },
    "designPrinciples": {
      "approachable": "Friendly illustrations and warm colors create welcoming experience",
      "organic": "Non-grid layouts and varied card sizes feel natural and human",
      "focused": "Clear information hierarchy guides user attention",
      "consistent": "Repeated patterns and consistent spacing create familiarity",
      "delightful": "Subtle animations and thoughtful details enhance user joy"
    }
  }